<Window x:Class="MailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu Background="Azure" DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="Exit_OnClick"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="О программе"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem DockPanel.Dock="Right">
                <ResizeGrip/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="Программа рассылки почты"/>
            </StatusBarItem>
        </StatusBar>
        <TabControl>
            <TabItem Header="Списки">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ToolBarTray Grid.Row="0">
                        <ToolBar>
                            <Label Content="Сервера" Margin="0, 0, 26, 0"/>
                            <ComboBox Width="120" SelectedIndex="0">
                                <ComboBoxItem Content="Сервер 1"/>
                                <ComboBoxItem Content="Сервер 2"/>
                                <ComboBoxItem Content="Сервер 3"/>
                            </ComboBox>
                            <Button ToolTip="Добавление" Margin="0, 0,2,0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Height="20" Source="Media/add.png" Margin="0,0,3,0"/>
                                    <TextBlock Text="Добавить"/>
                                </StackPanel>
                            </Button>
                            <Button ToolTip="Редактирование" Margin="0,0,2,0">
                                <Image Height="20" Source="Media/edit.png" Margin="0,0,3,0"/>
                            </Button>
                            <Button ToolTip="Удаление" Margin="0,0,7.5,0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Height="20" Source="Media/delete.png" Margin="0,0,3,0"/>
                                    <TextBlock Text="Удалить"/>
                                </StackPanel>
                            </Button>
                        </ToolBar>
                        <ToolBar Band="1" BandIndex="0">
                            <Label Content="Отправители"/>
                            <ComboBox Width="120" SelectedIndex="0">
                                <ComboBoxItem Content="Отправитель 1"/>
                                <ComboBoxItem Content="Отправитель 2"/>
                                <ComboBoxItem Content="Отправитель 3"/>
                            </ComboBox>
                            <Button ToolTip="Добавление">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Height="17" 
                                                     Icon="Solid_PlusCircle" 
                                                     Margin="0,0,5,0"
                                                     Foreground="CornflowerBlue" />
                                    <TextBlock Text="Добавить"/>
                                </StackPanel>
                            </Button>
                            <Button ToolTip="Редактирование" fa:Awesome.Content="Solid_UserEdit" Foreground="CornflowerBlue"/>
                            <Button ToolTip="Удаление" fa:Awesome.Content="Solid_TrashRestore" Foreground="CornflowerBlue"/>
                        </ToolBar>
                        <ToolBar Header="Планировщик">
                            <Button ToolTip="Перейти в планировщик">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Height="17" 
                                                     Icon="Regular_CalendarPlus" 
                                                     Margin="0,0,5,0"
                                                     Foreground="CornflowerBlue" />
                                </StackPanel>
                            </Button>
                        </ToolBar>
                        <ToolBar Header="Получатели" Band="1" BandIndex="1">
                            <Button ToolTip="Добавление">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Height="17" 
                                                     Icon="Solid_PlusCircle" 
                                                     Margin="0,0,5,0"
                                                     Foreground="CornflowerBlue" />
                                    <TextBlock Text="Добавить"/>
                                </StackPanel>
                            </Button>
                            <Button ToolTip="Редактирование" fa:Awesome.Content="Solid_UserEdit" Foreground="CornflowerBlue"/>
                            <Button ToolTip="Удаление" fa:Awesome.Content="Solid_TrashRestore" Foreground="CornflowerBlue"/>
                        </ToolBar>
                    </ToolBarTray>
                    <DataGrid Grid.Row="1" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" MinWidth="40" MaxWidth="80"/>
                            <DataGridTextColumn Header="Имя" Width="*" MinWidth="150"/>
                            <DataGridTextColumn Header="Адрес" MinWidth="120"/>
                            <DataGridTextColumn Header="Описание" MinWidth="140"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Расписание"></TabItem>
            <TabItem Header="Письма"></TabItem>
            <TabItem Header="Статистика"></TabItem>
        </TabControl>
    </DockPanel>
</Window>
